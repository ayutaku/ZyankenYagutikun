<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FightActivity"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    //アニメーションつけたい

    <TextView
    android:id="@+id/zyan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="じゃん..."
    android:textSize="30dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:textColor="#000000"
    ></TextView>

    <TextView
        android:id="@+id/ken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="けん..."
        android:textSize="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zyan"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        ></TextView>

    <TextView
        android:id="@+id/pon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ポン！！"
        android:textSize="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ken"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        ></TextView>

    <ImageView
        android:id="@+id/yaguti_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/yaguti_gu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pon"
        app:layout_constraintBottom_toTopOf="@+id/next"
        ></ImageView>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="次へ"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="next"
        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>